---
import { Icon } from 'astro-icon/components';

interface Link {
	label: string;
	href: string;
	icon: string;
}

const iconLinks: Link[] = [
	{ 
		label: 'Website', 
		href: 'https://crossinguard.dev/', 
		icon: 'globe' 
	},
	{ 
		label: 'GitHub', 
		href: 'https://github.com/crossinguard', 
		icon: 'github-logo' 
	},
];
---
<div class="social-links">
	{
		iconLinks.map(({ href, icon, label }) => (
			<a href={href} class="social-link" target="_blank">
				<span class="sr-only">
					Go to {label} for W. Brett Egbert (crossinguard)
				</span>
				<Icon name={icon} />
			</a>
		))
	}
</div>

<style>
	/* svg source: https://phosphoricons.com */
	/* component docs: https://www.astroicon.dev/guides/styling/ */

	[data-icon] {
		color: var(--primary);
		position: relative;
		top: 0.25rem;
		font-size: 1.5rem;
		transition: all 0.2s ease-in-out;
		margin-block: 0.5em;

		&:hover {
			color: var(--secondary);
		}
	}

	[data-icon='venn'] {
	marg	in-inline: auto;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
	}
	.social-link {
		text-decoration: none;
		transition: all 0.2s ease-in-out;
	}
</style>