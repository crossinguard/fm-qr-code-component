---
import Social from './Social.astro';
import site from '../data/site.json';

const {author} = site;
const today = new Date();
---

<footer>
	<div class="flex">
		<p>{author} &copy; {today.getFullYear()}</p>
		<p class="curious">stay curious</p>
		<Social />
	</div>
</footer>
<style>
	.flex {
		font-family: monospace;
		display: flex;
		flex-direction: column;
		padding-block: 4em;
		color: var(--gray-light);
		text-align: center;
	}

	.curious {
		font-size: smaller;
		font-style: italic;
	}
</style>
