---
interface Props {
	date: Date;
}

const { date } = Astro.props;

const adjustedDate = new Date(date);
adjustedDate.setHours(date.getHours() + 8); // UTC to PT offset 8hrs
---

<time datetime={adjustedDate.toISOString()}>
	{
		adjustedDate.toLocaleDateString('en-GB', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
			timeZone: 'America/Los_Angeles'
		})
	}
</time>
